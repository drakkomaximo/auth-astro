---
const { isLoggedIn } = Astro.locals;
---

<!-- component -->
<nav class="flex justify-between px-20 py-10 items-center bg-white">
  <h1 class="text-xl text-gray-800 font-bold">Astro Auth</h1>
  <div class="flex items-center">
    <ul class="flex items-center space-x-6 text-decoration-none">
      <li class="font-semibold text-gray-700">
        <a href="/">Home</a>
      </li>
      {
        isLoggedIn ? (
          <li class="font-semibold text-gray-700 text-decoration-none">
            <a href="/protected">Protected</a>
          </li>
        ) : null
      }
      {
        !isLoggedIn ? (
          <li class="font-semibold text-gray-700 text-decoration-none">
            <a href="/login">Login</a>
          </li>
        ) : (
          <li
            id="logout"
            class="font-semibold text-gray-700 text-decoration-none"
          >
            <a href="#">Logout</a>
          </li>
        )
      }
    </ul>
  </div>
</nav>

<script>
  import { actions } from "astro:actions";

  const li = document.querySelector("#logout") as HTMLLIElement;

  li?.addEventListener("click", async () => {
    actions.logout();
    window.location.href = "/";
  });
</script>
